<?xml version="1.0" encoding="UTF-8"?>
<SimulationConfig>
    <Type>Segregation</Type>
    <Title>RandomByNumStates</Title>
    <Author>Troy Ludwig</Author>
    <Description>A random segregation pattern with 25 members for group one and 25 members for group 2</Description>

    <Neighbors>
        <NeighborType>Moore</NeighborType>
        <NeighborLayer>1</NeighborLayer>
    </Neighbors>

    <GridDimensions>
        <Height>10</Height>
        <Width>10</Width>
    </GridDimensions>

    <RandomInitByState>
        <State name="GROUP ONE">25</State>
        <State name="GROUP TWO">25</State>
    </RandomInitByState>

    <Parameters>
        <toleranceThreshold> 0.5 </toleranceThreshold>
    </Parameters>
</SimulationConfig>