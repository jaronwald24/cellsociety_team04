<?xml version="1.0" encoding="UTF-8"?>
<SimulationConfig>
    <Type>Segregation</Type>
    <Title>Random Segregation</Title>
    <Author>Troy Ludwig</Author>
    <Description>A random segregation pattern with 40 of members from group one, 40 from group two, and 20 empty</Description>

    <Neighbors>
        <NeighborType>Moore</NeighborType>
        <NeighborLayer>1</NeighborLayer>
    </Neighbors>

    <GridDimensions>
        <Height>10</Height>
        <Width>10</Width>
    </GridDimensions>

    <RandomInitByState>
        <State name="GROUP ONE">40</State>
        <State name="GROUP TWO">40</State>
    </RandomInitByState>

    <Parameters>
        <toleranceThreshold> 0.5 </toleranceThreshold>
    </Parameters>
</SimulationConfig>